<div class="user_show_container">
  <div  class= "show_profile">
   <div> <img src= "<%= @user.photo %>" class="py-2 userImage"> </div>
    <div class= "borders">
      <h3 class = "user_name"><%= @user.name %></h3>
      <span class="num">
        Number of posts: <% if @user.post_counter.to_i > 0 %> <%= @user.post_counter %> <% else %>
        <%= 0 %> <% end %>
      </span>
    </div>
  </div>
  <div class = "border" >
    <h3 class="bio">Bio:</h3>
    <p class = "post_show_title"><%= @user.bio %></p>
  </div>
  <div >
    <% @user.most_recent_post.each do |post| %>
    <div class = "border">
      <h5 class = "post_show_id">Post #<%= @user.post_counter %></h5>
      <h4 class = "post_show_titles"><%= post.title %></h4>
      <p class = "post_show_text"><%= post.text %></p>
      <% if post.comments_counter.to_i > 0 %>
      <span  >Comments: <%= post.comments_counter %></span>
      <% else %>
      
      <span >Comments: <%= 0 %></span>
      <% end %> <% if post.likes_counter.to_i > 0 %>
      <span>Likes:<%= post.likes_counter %></span>
      <% else %>
      <span >Likes: <%= 0 %></span>
    </div>
    </div>
      <% end %> <% end %>
  </div>
  <div class="btn"><%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "posts-btn" %></div>

</div>