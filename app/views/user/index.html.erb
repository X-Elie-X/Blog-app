<div class = "user_index_container">
<%= @users.each do |user| %>
<div  class = "user_profile">
<div  class= "img"> <%= image_tag "img/profile.jpeg" %>  </div>
<div class = "borders">
      <h3 class= "user_name"><%= user.name %></h3>
      <span class= "num">Number of posts: <% if user.post_counter.to_i > 0 %>
        <%= user.post_counter %>
        <% else %>
        <%= 0 %>
        <% end %>
       </span>
    </div>
  </div>
  <% end %>
</div>
