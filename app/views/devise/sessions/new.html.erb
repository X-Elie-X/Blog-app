<div id="singup" class= "container bgColor py-3">
<h2 class="welcome text-center py-4">Welcome to the Log In Page <br> Enter the required details below To Log in</h2>
<div class="log-container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field text-center">
    <%= f.label :email, class: "mx-3"  %>: 
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ftext" %>
  </div>

  <div class="field text-center py-3">
    <%= f.label :password  %>: 
    <%= f.password_field :password, autocomplete: "current-password", class: "ftext" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field text-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions  text-center submit">
    <%= f.submit "Log in", class: "py-2 col-1" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>