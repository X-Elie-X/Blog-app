<div class="postsFormContainer">
<h1 class="create-title">Create A New Post</h1>
<%= form_with model: Post, url: user_posts_path, data: {turbo: false}, class: "post" do |form| %>
<div class="post-form">
<%= form.label :title, class: "ptitle" %><br>
<%= form.text_field :title, class: "ptitlebox" %> <br>
<%= form.label :text, class: "ptitle" %><br>
<%= form.text_area :text, class: "ptitlebox", cols: 30, rows: 5 %> <br>
<%= form.submit "Submit Post", class: "posts-btn" %>
</div>
<% end %>
</div>